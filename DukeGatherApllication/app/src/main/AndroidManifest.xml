<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wushbin.dukegatherapllication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- PostActivity -->
        <activity
            android:name=".PostActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/page_posts">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>

        <!-- InGroup Activity -->
        <activity
            android:name=".InGroupActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/page_group">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>

        <!-- Search Activity -->
        <activity
            android:name=".SearchActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/page_search">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>

        <!-- Setting Activity -->
        <activity
            android:name=".SettingActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/page_setting">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>

        <!-- Setting Activity -->
        <activity
            android:name=".CreatePostActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/page_create_post">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>

        <!-- Group Information Activity -->
        <activity
            android:name=".GroupInfoActivity"
            android:parentActivityName=".MainActivity"
            android:label="Group Information">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>

    </application>


</manifest>